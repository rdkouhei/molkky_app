<ConfirmPopup>:
    BoxLayout:
        orientation: 'vertical'
        Button:
            text: 'Next Game'
            font_size : 22
            on_press: root.on_button1_press()

<Dialog1>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        spacing: 20
        
        Label:
            text: "Go Next Game?"
            font_size: 32

        BoxLayout:
            size_hint_y: None
            height: 50
            Button:
                text: "Cancel"
                font_size: 24
                on_release: root.cancel()

            Button:
                text: "OK"
                font_size: 24
                on_release: root.select()