#: import get_color_from_hex kivy.utils.get_color_from_hex

<CalcButton@Button>:
	font_size: 30
	background_normal: ''
	background_down: ''
	background_color: get_color_from_hex("#1F6982")
	on_press: self.background_color = get_color_from_hex("#184B5C")
	on_release: self.background_color = get_color_from_hex("#1F6982")

<NumberButtonTeam@CalcButton>:
	font: "Roboto"
	font_size: 30
	bold: True
	on_press: app.root.team_num_window.add_number(self.text)

<ClearButtonTeam@CalcButton>:
	on_press: app.root.team_num_window.clear_display()

<EqualButtonTeam@CalcButton>:
	on_press: app.root.team_num_window.register()
    # on_press: app.root.register_team()

<KeyboardTeam@GridLayout>:
	cols: 3
	rows: 4
	spacing: 2
	padding: 4

    NumberButtonTeam:
		text: "1"
	NumberButtonTeam:
		text: "2"
	NumberButtonTeam:
		text: "3"
    
    NumberButtonTeam:
		text: "4"
	NumberButtonTeam:
		text: "5"
	NumberButtonTeam:
		text: "6"
    
    NumberButtonTeam:
		text: "7"
	NumberButtonTeam:
		text: "8"
	NumberButtonTeam:
		text: "9"

	ClearButtonTeam:
		text: "C"
	NumberButtonTeam:
		text: "0"
	EqualButtonTeam:
		text: "OK"

<TeamNumSetting@BoxLayout>
    orientation: "vertical"

    ActionBar:
        ActionView:

            ActionPrevious:
                title: 'Team Number Setting'
                with_previous: False

            ActionButton:
                text: 'Next'
                on_press: app.root.buttonPlayerSetting()
            
            #ActionButton:
            #    text: 'Back'
            #    on_press: app.root.buttonClicked_back()

    BoxLayout:
        orientation: "vertical"
        Label:
            text: root.message
        Label:
            text: root.setting_view[0]
        Label:
            text: root.setting_view[1]
        Label:
            text: root.user_input
    
    KeyboardTeam:
