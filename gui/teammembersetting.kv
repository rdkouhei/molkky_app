<CalcButton@Button>:
	font_size: 30
	background_normal: ''
	background_down: ''
	background_color: get_color_from_hex("#1F6982")
	on_press: self.background_color = get_color_from_hex("#184B5C")
	on_release: self.background_color = get_color_from_hex("#1F6982")

<AddButton@CalcButton>:
	on_press: app.root.member_setting_window.register()

<TeamMemberSetting@BoxLayout>
    orientation: "vertical"

    ActionBar:
        ActionView:

            ActionPrevious:
                title: 'Team Member Setting'
                with_previous: False

            ActionButton:
                text: 'Start game'
                on_press: app.root.buttonStartGame()

    BoxLayout:
        orientation: "vertical"
        size_hint: 1, 0.6
        Label:
            size_hint: 1, 0.4
            text: root.message_instruction
            
        Label:
            size_hint: 1, 0.4
            text: root.message_team
        
        Label:
            size_hint: 1, 0.4
            text: root.message_player

        Label:
            size_hint: 1, 0.4
            text: root.text_input

        BoxLayout:
            orientation: "horizontal"
            size_hint: 1, 0.2
            TextInput:
                size_hint: 0.7, 1
                text: ''
                on_text: root.update_label(self.text)

            AddButton:
                size_hint: 0.3, 1
                text: "Add Player"
    Widget:
        size_hint: 1, 0.4