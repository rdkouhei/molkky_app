#: import get_color_from_hex kivy.utils.get_color_from_hex

<CalcButton@Button>:
	font_size: 30
	background_normal: ''
	background_down: ''
	background_color: get_color_from_hex("#1F6982")
	on_press: self.background_color = get_color_from_hex("#184B5C")
	on_release: self.background_color = get_color_from_hex("#1F6982")

<NumberButtonTeam@CalcButton>:
	font: "Roboto"
	font_size: 30
	bold: True
	on_press: self.parent.parent.add_number(self.text)

<ClearButtonTeam@CalcButton>:
	on_press: self.parent.parent.clear_display()

<EqualButtonTeam@CalcButton>:
	on_press: self.parent.parent.register()

<KeyboardTeam@GridLayout>:
	cols: 3
	rows: 4
	spacing: 2
	padding: 4

    NumberButtonTeam:
		text: "1"
	NumberButtonTeam:
		text: "2"
	NumberButtonTeam:
		text: "3"
    
    NumberButtonTeam:
		text: "4"
	NumberButtonTeam:
		text: "5"
	NumberButtonTeam:
		text: "6"
    
    NumberButtonTeam:
		text: "7"
	NumberButtonTeam:
		text: "8"
	NumberButtonTeam:
		text: "9"

	ClearButtonTeam:
		text: "C"
	NumberButtonTeam:
		text: "0"
	EqualButtonTeam:
		text: "OK"

<TeamNumSetting@BoxLayout>
    orientation: "vertical"

    ActionBar:
        ActionView:

            ActionPrevious:
                title: 'Team Number Setting'
                with_previous: False

            ActionButton:
                text: 'Go Next'
                on_press: root.go_next_screen()

    BoxLayout:
        orientation: "vertical"
        Label:
            text: root.message
            font_size: root.h1_fontsize
        Label:
            text: root.setting_view[0]
            font_size: root.h2_fontsize
        Label:
            text: root.setting_view[1]
            font_size: root.h2_fontsize
        Label:
            text: root.user_input
            font_size: root.h2_fontsize
    
    KeyboardTeam:
